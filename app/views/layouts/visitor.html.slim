doctype html
html
  head
    title = page_title
    = csrf_meta_tags
    = stylesheet_link_tag 'visitor', media: 'all'
    = javascript_include_tag 'application'

  body class=[controller_name, action_name]
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          header.masthead.clearfix
            .inner
              h3.masthead-brand
                = page_title
              nav.nav.nav-masthead
                == I18n.locale == I18n.default_locale ? link_to('Espa√±ol', { locale: :es }, class: 'nav-link mr-5 font-weight-light') : link_to('English', { locale: :en }, class: 'nav-link mr-5 font-weight-light')
                = active_link_to t('.home'), root_path, class: 'nav-link', active: :exact
                = active_link_to t('.sign_in'), new_user_session_path, class: 'nav-link'
                = active_link_to t('.sign_up'), new_user_registration_path, class: 'nav-link'
          main.inner.cover role='main'
            = yield

          footer.mastfoot
            .inner
              p
                = t('general.made_by_html')
